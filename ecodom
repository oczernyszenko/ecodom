<!-- Сравнение технологий -->
<section id="comparison" style="padding:50px 20px; background-color:#f0f8ff;">
  <h2>Сравнение технологий</h2>
  <table border="1" cellspacing="0" cellpadding="10" style="width:100%; border-collapse:collapse;">
